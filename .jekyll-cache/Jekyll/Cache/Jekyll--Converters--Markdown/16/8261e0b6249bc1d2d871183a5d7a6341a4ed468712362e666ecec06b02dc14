        var facets = Array.from(new Set(['british-library', 'british-library', 'british-library', 'british-library', 'british-library', 'british-library', 'british-library', 'british-library', 'british-library', 'british-library', 'british-library', 'british-library', 'british-library', 'british-library', 'british-library', 'british-library', 'british-library', 'british-library', 'british-library', 'british-library', 'british-library', 'british-library', 'british-library', 'british-library', 'british-library', 'british-library', 'british-library', 'british-library', 'british-library', 'british-library', 'british-library', 'briitish-library']));
